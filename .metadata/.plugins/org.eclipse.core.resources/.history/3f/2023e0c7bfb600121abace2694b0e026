import java.util.*;
public class Game {

	
	public static void  main(String[] args) {
		Scanner scan = new Scanner(System.in);
		String name;
		int ans;
		
		System.out.println("Please enter your name.");
		name = scan.nextLine();
		System.out.print("Hello " + name + ".");
		System.out.println(" Are you ready for your quest?");
		System.out.println("Press 1 for yes or 2 for no");
		ans = scan.nextInt();
		
		if(ans == 1){
			System.out.println("Let us begin");
			quest();
		}
			if(ans == 2){
				System.out.println("End");
			}
	}	
			public static void quest(){
				Scanner scan = new Scanner(System.in);
				int result;
				int num1, num2;
				
				System.out.println("You must enter a number.");
				num1 = scan.nextInt();
				System.out.println("You must enter another number.");
				num2 = scan.nextInt();
				result = num1 + num2;
				
				if(result > 20){
				System.out.println("You start your journey as a wizard");
				dice();
				}
				if(result < 20){
				System.out.println("You begin your journey as a hobbit");
				dice();
				}
			
				
				
			
	}
			
		
				}
				
			}
			


