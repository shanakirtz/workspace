import java.util.*;

public class WhileLoop {

	public static void main(String[] args) {
	
		Scanner keyboard = new Scanner(System.in);
		double temp;
		final double MAX_TEMP = 102.5;
		
		System.out.println("Please enter the temperature.");
		temp = keyboard.nextDouble();
		
		while(temp > MAX_TEMP)
		{
			System.out.println("Temp is too high");
			System.out.println("Please check again in 15 min");
			System.out.println("Enter new temp here");
			temp = keyboard.nextDouble();
			
		}
			System.out.println("That temperature is acceptable");
			System.out.println("Check it again in 15 min");
	}

}
